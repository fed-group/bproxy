{
  "name": "bproxy",
  "version": "0.0.1",
  "description": "集抓包、调试、mock 于一身的前端开发利器",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "start-server": "nodemon",
    "start-client": "pnpm --filter @bproxy/client start",
    "build": "pnpm build-utils && pnpm build-bridge && pnpm build-server",
    "build-client": "pnpm --filter @bproxy/client build",
    "build-server": "pnpm --filter @bproxy/server build & pnpm --filter @bproxy/server build-esm",
    "build-bridge": "pnpm --filter @bproxy/bridge build & pnpm --filter @bproxy/bridge build-esm",
    "build-utils": "pnpm --filter @bproxy/utils build & pnpm --filter @bproxy/utils build-esm",
    "check-types": "pnpm -r check-types"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=16.13.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.{css,less,scss}": [
      "prettier --write"
    ],
    "*.{html,md,json,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "debug": "^4.3.4",
    "tslib": "2.0.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@fengyinchao/eslint-config-fed": "^1.0.2",
    "@types/jest": "27.0.2",
    "@types/node": "12.12.62",
    "add": "^2.0.6",
    "commitlint": "^17.0.3",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "jest": "26.4.2",
    "nodemon": "^2.0.16",
    "rimraf": "3.0.2",
    "standard-version": "9.0.0",
    "stylelint": "13.7.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "ts-jest": "26.4.0",
    "ts-node-dev": "1.0.0-pre.63",
    "turbo": "^1.2.16",
    "wait-on": "5.2.0",
    "yarn": "^1.22.19",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "12.1.4",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "@fengyinchao/eslint-plugin-custom": "0.0.6",
    "babel-eslint": "10.1.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-deprecation": "1.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "33.0.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "typescript": "4.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fengyinchao/fe-standard-config-seed.git"
  },
  "keywords": [
    "standard",
    "typescript",
    "eslint",
    "styleint",
    "prettier",
    "editorconfig"
  ],
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
