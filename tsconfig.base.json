{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./packages",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop":true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/test/**/*", "**/jest-*.ts"]
}
